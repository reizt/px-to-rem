{
  "name": "px-to-rem",
  "publisher": "reizt",
  "license": "MIT",
  "displayName": "CSS px to rem",
  "author": {
    "name": "Reiju Takahashi",
    "email": "reizt.dev@gmail.com",
    "url": "https://github.com/reizt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reizt/vscode-px-to-rem"
  },
  "description": "Just convert px to rem",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:px-to-rem.convert",
    "onLanguage:css"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "px-to-rem.convert",
        "title": "Convert px to rem"
      }
    ],
    "configuration": {
      "title": "px to rem",
      "properties": {
        "px-to-rem.pxPerRem": {
          "type": "number",
          "default": 10,
          "title": "px per rem",
          "description": "px per 1rem to refer to when executing the convert command. defaults to 10"
        },
        "px-to-rem.formatOnSave": {
          "type": "boolean",
          "default": false,
          "title": "format on save",
          "description": "whether convert on save. defaults to false"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "make": "npx vsce package",
    "test": "jest",
    "lint": "eslint",
    "format": "prettier",
    "typecheck": "tsc --noEmit",
    "organize": "yarn format --write --loglevel silent src && yarn lint --fix && yarn typecheck"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "esbuild": "^0.17.7",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "jest": "^29.4.2",
    "mocha": "^10.1.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
